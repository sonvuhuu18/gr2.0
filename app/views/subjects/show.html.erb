<%= render "conversations/index" %>

 <div id="subject-show">
  <div class="row">
    <div class="cell">
      <div class="grid">
        <div class="grid-box grid-box-10">
          <div class="breadcrumb-bar tac tal--l">
            <ul class="list breadcrumb mts">
              <li>
                <%= link_to root_url do %>
                  <i class="glyphicon glyphicon-th-list"></i>
                  <%= t "layout.home" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row has-sector">
    <div class="cell">
      <div class="grid grid-box-tasks">
        <div class="grid-box grid-box-75">
          <div class="well well--l">
            <div class="mbl">
              <div class="mbl--m">
                <h2 class="label"><%= @subject.name %></h2>
                <div class="row">
                  <p><b><i>"<%= @subject.description %>"</i></b></p>
                </div>
                <div class="row">
                  <p><%= sanitize @subject.content %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="grid-box grid-box-25 sector">
          <div class="well well--l">
            <div class="card">
              <div id="image-course">
                <%= trainee_image_lg @subject %>
              </div><br>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
