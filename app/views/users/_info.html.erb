<div class="col-md-5">
  <div class="form-group">
    <%= trainee_image_md @user %>
  </div>
</div>
<div class="col-md-7 info">
  <p>
    <b><%= t "user.name" %>: </b><%= @user.name %>
  </p>
  <p>
    <b><%= t "user.email" %>: </b><%= @user.email %>
  </p>
  <div class="form-group">
    <%= link_to t("button.edit"), edit_user_path(@user),
      class: "btn btn-info btn-sm" if current_user == @user %>
  </div>
</div>
