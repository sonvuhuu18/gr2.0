<% provide :title, t("user.edit") %>

<div class="row">
  <h1 class="text-primary center"><%= t "user.edit" %></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, html: {multipart: true} do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <div class="form-group">
        <%= f.label :name, t("user.name") %>
        <%= f.text_field :name, class: "form-control", disabled: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, t("user.email") %>
        <%= f.email_field :email, class: "form-control", disabled: true %>
      </div>

      <div class="form-group">
        <%= f.label :avatar, t("user.avatar") %>
        <%= f.file_field :avatar, id: "user_avatar", class: "form-control file-input" %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="form-group">
        <%= image_preview @user %>
        <div class="checkbox">
          <label>
            <%= f.check_box :remove_avatar %>
            <%= f.label t("user.remove_avatar") %>
          </label>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, t("user.password") %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t("user.password_confirmation") %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, class: "form-control",
          autocomplete: "off" %>
      </div>

      <%= f.submit t("button.submit"), class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>
